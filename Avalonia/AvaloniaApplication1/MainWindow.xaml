<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DropZone">
  <Border Background="Silver" Padding="16"
          Name="Target"
          DragDrop.AllowDrop="True">
    <TextBlock Name="Zone" TextWrapping="NoWrap" xml:space="preserve">Drop some text or files here</TextBlock>
  </Border>
</Window>